<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.furtmeier.personalKartei"
    android:versionCode="4"
    android:versionName="0.5" >

    <uses-sdk android:minSdkVersion="11" android:targetSdkVersion="21" />
    <supports-screens android:xlargeScreens="true" />

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.POWER" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    
    <application android:allowBackup="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name">
	    <receiver android:enabled="true" android:name="it.furtmeier.personalKartei.BootReceiver" android:permission="android.permission.RECEIVE_BOOT_COMPLETED">
	        <intent-filter>
	            <action android:name="android.intent.action.BOOT_COMPLETED" />
	            <category android:name="android.intent.category.DEFAULT" />
	        </intent-filter>
		</receiver>
        <receiver android:name="it.furtmeier.personalKartei.CheckRunningReceiver"></receiver>
		<service android:name="it.furtmeier.personalKartei.ForegroundService"/>        
        <activity android:name="it.furtmeier.personalKartei.PersonalKartei" android:label="@string/app_name" android:configChanges="mcc|mnc|keyboard|keyboardHidden|screenLayout|fontScale|uiMode|orientation|screenSize" android:alwaysRetainTaskState="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="CameraActivity" android:excludeFromRecents="true" android:theme="@style/Transparent"></activity>
    </application>

    
</manifest>